{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A src/index.ts",
    "dev-watch": "deno run -A --watch src/index.ts",
    "dev-db": "rm daataabaasaa.db; deno run -A src/db.ts; deno run dev",
    "dev-db-watch": "rm daataabaasaa.db; deno run -A src/db.ts; deno run dev-watch"
  },
  "imports": {
    "$src/": "./src/",
    "$utils/": "./src/utils/",
    "$static/": "./static/",

    "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "discord.js": "npm:discord.js@^14.24.2"
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr"],
      "include": [
        "camelCase",
        "eqeqeq",
        "explicit-function-return-type",
        "no-const-reassign",
        "no-eval"
      ]
    }
  },
  "fmt": {
    "bracePosition": "sameLine",
    "singleQuote": false,
    "semiColons": true,
    "operatorPosition": "nextLine",
    "useBraces": "whenNotSingleLine"
  }
}
