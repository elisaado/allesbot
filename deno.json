{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A src/index.ts",
    "dev-watch": "deno run -A --watch src/index.ts",
    "dev-db": "rm db/db.db; deno run -A src/db.ts; deno run dev",
    "dev-db-watch": "rm db/db.db; deno run -A src/db.ts; deno run dev-watch"
  },
  "imports": {
    "$src/": "./src/",
    "$utils/": "./src/utils/",
    "$static/": "./static/",

    "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
    "discord.js": "npm:discord.js@^14.24.2",
    "zod": "npm:zod@^4.1.12"
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsr"],
      "include": [
        "camelCase",
        "eqeqeq",
        "no-const-reassign",
        "no-eval"
      ],
      "exclude": [
        "no-extra-non-null-assertion"
      ]
    }
  }
}
